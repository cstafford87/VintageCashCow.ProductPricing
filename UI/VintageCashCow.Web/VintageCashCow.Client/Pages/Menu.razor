@page "/"

@using VintageCashCow.Application
@using VintageCashCow.Client.Shared
@using VintageCashCow.Client.Mappers
@using VintageCashCow.Client.Models

<PageTitle>Product Pricing - Vintage Cash Cow</PageTitle>

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-4">
    <MudText Typo="Typo.h4" Class="mb-4">Product Pricing Management</MudText>
    
    @if (IsLoading)
    {
        <MudProgressCircular Indeterminate="true" />
    }
    else
    {
        <ProductList Products="Products" OnProductUpdated="HandleProductUpdated" />
    }
</MudContainer>
