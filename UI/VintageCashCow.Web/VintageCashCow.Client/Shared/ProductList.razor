@using MudBlazor
@using VintageCashCow.Client.Models
@using System.Globalization

<MudTable Items="@Products" Hover="true" Striped="true" Dense="true" Elevation="2">
 <ToolBarContent>
 <MudText Typo="Typo.h6">Products</MudText>
    </ToolBarContent>
  <HeaderContent>
 <MudTh Style="width: 20%;">Name</MudTh>
        <MudTh Style="width: 10%;">Price</MudTh>
   <MudTh Style="width: 12%;">Last Updated</MudTh>
  <MudTh>Actions</MudTh>
 </HeaderContent>
 <RowTemplate Context="product">
 <MudTd DataLabel="Name" Style="width: 20%;">
     <MudText Typo="Typo.body2">@product.Name</MudText>
    </MudTd>
<MudTd DataLabel="Price" Style="width: 10%;">
   <MudText Typo="Typo.body2" Color="Color.Primary">
  <strong>@product.Price.ToString("C", _gbpCulture)</strong>
   </MudText>
 </MudTd>
     <MudTd DataLabel="Last Updated" Style="width: 12%;">
     <MudText Typo="Typo.body2">@product.LastUpdated.ToString("g")</MudText>
</MudTd>
  <MudTd DataLabel="Actions">
  <ProductActions Product="product" OnProductUpdated="HandleProductUpdated" />
  </MudTd>
  </RowTemplate>
    <NoRecordsContent>
      <MudText Typo="Typo.body1" Align="Align.Center" Class="py-4">
        No products available
   </MudText>
  </NoRecordsContent>
    <LoadingContent>
     <MudText Typo="Typo.body1" Align="Align.Center" Class="py-4">
 <MudProgressCircular Indeterminate="true" Size="Size.Small" />
        Loading products...
        </MudText>
    </LoadingContent>
</MudTable>
